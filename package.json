{
  "name": "manga-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:contract": "jest --testPathPattern=contract",
    "test:integration": "jest --testPathPattern=integration",
    "dev:flags": "node -p \"Object.entries(process.env).filter(([k]) => k.startsWith('FEATURE_')).map(([k,v]) => k + '=' + v).join('\\n')\"",
    "health": "curl -f http://localhost:3000/api/health || echo 'Health check failed'"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "@supabase/supabase-js": "^2.0.0",
    "zod": "^3.22.0",
    "typescript": "^5.0.0",
    "tailwindcss": "^3.3.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.0.0",
    "@testing-library/react": "^13.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.5"
  }
}
